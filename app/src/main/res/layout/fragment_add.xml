<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Project"
                android:textSize="30sp"
                android:theme="@style/text_style"
                android:layout_weight="1"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/project_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="project name:"
                    android:theme="@style/text_style" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/project_name_tv"
                    android:autofillHints=""
                    android:background="@drawable/circle_shape"
                    android:paddingHorizontal="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/deadline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Deadline:"
                    android:theme="@style/text_style" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/deadline_tv"
                    android:autofillHints=""
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_shape"
                    android:drawableEnd="@drawable/ic_date"
                    android:enabled="false"
                    android:paddingHorizontal="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/attached_file_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Attached file:"
                    android:theme="@style/text_style" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toEndOf="@+id/attached_file_tv"
                    android:autofillHints=""                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_shape"
                    android:drawableEnd="@drawable/ic_down_arrow"
                    android:enabled="false"
                    android:inputType="text"
                    android:paddingHorizontal="10dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="write rhe steps of the project in details:"
                android:textSize="15sp"
                android:theme="@style/text_style" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/step_one_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Step one:"
                        android:theme="@style/text_style" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/step_one_tv"
                        android:autofillHints=""
                        android:background="@drawable/circle_shape"
                        android:inputType="text"
                        android:paddingHorizontal="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/step_two_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Step two:"
                        android:theme="@style/text_style" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/step_two_tv"
                        android:autofillHints=""
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_shape"
                        android:inputType="text"
                        android:paddingHorizontal="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/container_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/step_three_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Step three:"
                        android:theme="@style/text_style" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/step_three_tv"
                        android:autofillHints=""
                        android:background="@drawable/circle_shape"
                        android:inputType="text"
                        android:paddingHorizontal="10dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/container_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/step_four_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Step four:"
                        android:theme="@style/text_style" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@+id/step_four_tv"
                        android:autofillHints=""
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_shape"
                        android:inputType="text"
                        android:paddingHorizontal="10dp" />
                </RelativeLayout>
            </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginTop="10dp">
             <Button
                 android:id="@+id/add_step_btn"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:background="@drawable/radius_shape"
                 app:backgroundTint="@color/primary"
                 android:text="add step"
                 android:textColor="@color/secondary"/>
         </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@drawable/radius_shape"
                    app:backgroundTint="@color/secondary"
                    android:text="create project"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

        </LinearLayout>
    </LinearLayout>

</FrameLayout>